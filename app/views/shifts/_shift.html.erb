<div class='border-2 flex flex-col rounded py-5 min-h-fit h-full justify-between bg-white' id="<%= dom_id shift %>" data-controller='shifts'>
    <div class='flex flex-col px-3' >
        <span class='text-xl font-bold'>Walker: <%= shift.user.name %></span>
        <div class='flex flex-col my-5 text-center'>
            <span class='text-xl font-bold'>Dogs</span>
            <% shift.dogs.uniq.each do |dog| %>                        
                <%= render partial: 'dog', locals: { dog: dog, shift: shift } %>
            <% end %>
        </div>
    </div>
            <button
                type='button'
                class='focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 text-xs rounded-lg text-sm px-5 mx-3 py-2.5 border-b-2 place-content-center'
                data-action='click->shifts#toggleAddDog'
                data-value='<%= shift.id %>'
                <% if shift.dogs.length > 9 %>
                    disabled
                <% end %>>
                Add a dog
            </button>
    <div id="addDogForm_<%= shift.id %>" class='hidden'>
        <%= render partial: 'add_dog', locals: { shift: shift } %>
    </div>
</div>